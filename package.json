{
  "name": "@enhanced-elements/root",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "clear && vitest run",
    "test:watch": "clear && vitest",
    "test:coverage": "clear && vitest run --coverage",
    "test:unit": "clear && vitest run --project unit",
    "test:browser": "clear && vitest run --project browser",
    "build": "npm --prefix ./packages/inputs/ run build",
    "release": "npm --prefix ./packages/inputs/ run release",
    "dev": "npm --prefix ./packages/playground/ run dev",
    "preview": "npm --prefix ./packages/playground/ run preview",
    "update": "npm run build && npm i",
    "docs:dev": "vitepress dev packages/documentation",
    "docs:build": "vitepress build packages/documentation",
    "docs:preview": "vitepress preview packages/documentation"
  },
  "dependencies": {
    "@vueuse/core": "^13.4.0",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.2",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.8",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "^1.3.3",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.1",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.30.0",
    "eslint-plugin-vue": "^10.2.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "playwright": "^1.53.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.4",
    "vue": "^3.5.17",
    "vue-tsc": "^2.2.10"
  }
}