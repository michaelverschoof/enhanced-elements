{
    "name": "@enhanced-elements/enhanced-inputs",
    "description": "Simple, type safe and flexible component library that improves native HTML elements.",
    "author": {
        "name": "Michael Verschoof",
        "email": "michael.verschoof@gmail.com"
    },
    "version": "0.1.0",
    "keywords": [
        "vue",
        "components",
        "elements",
        "html",
        "typed",
        "typescript",
        "ts",
        "type",
        "safe"
    ],
    "license": "MIT",
    "type": "module",
    "files": [
        "dist",
        "LICENSE",
        "README.md"
    ],
    "main": "./dist/enhanced-inputs.umd.cjs",
    "module": "./dist/enhanced-inputs.js",
    "types": "./dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types.d.ts",
            "import": "./dist/enhanced-inputs.js",
            "require": "./dist/enhanced-inputs.umd.cjs"
        }
    },
    "scripts": {
        "build": "npm run types:check && npm run build:only && npm run types:generate",
        "build:only": "vite build",
        "types:check": "vue-tsc --build",
        "types:generate": "vue-tsc ./types.ts --declaration --emitDeclarationOnly --outdir dist",
        "test": "clear && vitest run",
        "test:watch": "vitest",
        "test:once": "clear && vitest run",
        "test:coverage": "clear && vitest run --coverage",
        "lint": "eslint . --fix",
        "format": "prettier --write src/",
        "release": "clear && npm install && npm run build && npm publish"
    },
    "peerDependencies": {
        "typescript": ">=4.4.4",
        "vue": "^2.7.0 || ^3.5.11"
    },
    "peerDependenciesMeta": {
        "typescript": {
            "optional": true
        }
    },
    "dependencies": {
        "@vueuse/core": "^13.1.0"
    },
    "devDependencies": {
        "@tsconfig/node22": "^22.0.1",
        "@types/jsdom": "^21.1.7",
        "@types/node": "22.15.3",
        "@vitejs/plugin-vue": "^5.2.3",
        "@vitest/coverage-v8": "^3.1.2",
        "@vitest/eslint-plugin": "^1.1.44",
        "@vue/eslint-config-prettier": "^10.2.0",
        "@vue/eslint-config-typescript": "^14.5.0",
        "@vue/test-utils": "^2.4.6",
        "@vue/tsconfig": "^0.7.0",
        "eslint": "^9.26.0",
        "eslint-plugin-vue": "^10.1.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.1.0",
        "npm-run-all2": "^8.0.1",
        "prettier": "^3.5.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.4",
        "vite-plugin-vue-devtools": "^7.7.6",
        "vitest": "^3.1.2",
        "vue-tsc": "^2.2.10"
    }
}
